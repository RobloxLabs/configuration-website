<!DOCTYPE html>
<!-- @ViewBag.MachineID -->
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewBag.Title != null ? $"{ViewBag.Title} - " : "")Roblox Configuration v1.00</title>
    <link rel="shortcut icon" href="../favicon.ico" />
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">Roblox Configuration</a>
            </div>

            <ul class="nav navbar-nav">
                <li class="">
                    <a href="/list-groups">Configuration Groups</a>
                </li>
                <li class="">
                    <a href="/system-events">System Events</a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Settings <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="/settings/list">List Settings</a>
                        </li>
                        <li>
                            <a href="/settings/create">Create Setting</a>
                        </li>
                        <li>
                            <a href="/settings/get">Get Setting</a>
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Connection Strings <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="/connection-strings/list">List Settings</a>
                        </li>
                        <li>
                            <a href="/connection-strings/create">Create Setting</a>
                        </li>
                        <li>
                            <a href="/connection-strings/get">Get Setting</a>
                        </li>
                    </ul>
                </li>
            </ul>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbar-text">Hello, @ViewBag.UserName!</li>
                    <li class="navbar-link"><a href="/Logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()

</body>
</html>
